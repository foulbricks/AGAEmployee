<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Please log in</h1>
			<div class="account-wall">
			<img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

			<%= form_tag(login_path, method: "post", class: "form-signin") do  %>
				<div id="page">
					<% if flash[:alert] %>
						<p class="alert alert-danger"><%= flash[:alert] %></p>
					<% end %>
					<% if flash[:notice] %>
						<p class="alert alert-success"><%= flash[:notice] %></p>
					<% end %>
				</div>
				<div>
					<p>
						<%= label_tag :name %>:<br />
						<%= text_field_tag :username, nil, :class => "form-control" %>
					</p>
					<p>
						<%= label_tag :password, "Password:" %>:<br />
						<%= password_field_tag :password, nil, :class => "form-control" %>
					</p>
				</div>
				<p><%= submit_tag "Login", :class => "btn btn-lg btn-primary btn-block"  %></p>
				<p>Need an account? <%= link_to "Register", register_path %><span class="clearfix"></span></p>
			<% end %>
			</div>
		</div>
	</div>
</div>