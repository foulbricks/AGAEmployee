<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3>Search Directory for AGA Employees</h3>
			</div>
			<div class="col-lg-3">
                <%= form_tag search_path, method: "post" do  %>
					<div>
						<p>
							<%= label_tag :name %>:<br />
							<%= text_field_tag :name, nil, :class => "form-control" %>
						</p>
					</div>
					<p><%= submit_tag "Search", :class => "btn btn-lg btn-primary btn-block"  %></p>
				<% end %>
            </div>
        </div>
		<% if @employees %>
			<div class="row">
				<div class="col-lg-12">
					<% if @employees.size > 0 %>
						<h3>Employees</h3>
						<table class="table table-striped table-bordered table-condensed">
							<tr>
								<th></th>
								<th>Name</th>
								<th>Title</th>
								<th>Phone</th>
								<th></th>
							</tr>
							<% for employee in @employees %>
								<tr class="<%= cycle('even', 'odd') -%>">
									<td class="left"><%= image_tag employee.image_url(:thumb), :width => 50 %></td>
									<td class="left"><%= employee.name %></td>
									<td class="left"><%= employee.title %></td>
									<td class="left"><%= employee.phone %></td>
									<td><%= link_to "Show", :controller => "employees", :action => "show", :name => employee.name %> </td>
								</tr>
							<% end %>
						</table>
					<% else %>
						<p>Could not find any employees with that criteria</p>
					<% end %>
				</div>
			</div>
		<% end %>
    </div>
</div>