<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<% if @employee.errors.any? %>
				<div id="page">
					<% if flash[:alert] %>
						<p class="alert alert-danger"><%= flash[:alert] %></p>
					<% end %>
					<% if flash[:notice] %>
						<p class="alert alert-success"><%= flash[:notice] %></p>
					<% end %>
				</div>
			<% end %>
			
			<h1 class="text-center login-title">Please create an account to continue to the AGA Directory</h1>
			<div class="account-wall">

			<%= form_for @employee, :html => {:class => "form-signin", :multipart => true} do |f| %>
				<div>
					<p>
						<%= f.label :name %>:<br />
						<%= f.text_field :name, :class => "form-control" %>
					</p>
					<p>
						<%= f.label :passwd, "Password:" %>:<br />
						<%= f.password_field :passwd, :class => "form-control" %>
					</p>
					<p>
						<%= f.label :passwd_confirmation, "Password Confirmation:" %><br />
						<%= f.password_field :passwd_confirmation, :class => "form-control" %>
					</p>
					<p>
						<%= f.label :image, "Image:" %><br />
						<%= f.file_field :image %>
					</p>
				</div>
				<p><%= f.submit "Register", :class => "btn btn-lg btn-primary btn-block"  %></p>
				<p>Have an account? <%= link_to "Sign in", login_path %><span class="clearfix"></span></p>
			<% end %>
			</div>
		</div>
	</div>
</div>