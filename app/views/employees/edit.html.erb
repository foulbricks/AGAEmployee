<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<% if @employee.errors.any? %>
				<div id="page">
					<% if flash[:alert] %>
						<p class="alert alert-danger"><%= flash[:alert] %></p>
					<% end %>
					<% if flash[:notice] %>
						<p class="alert alert-success"><%= flash[:notice] %></p>
					<% end %>
				</div>
			<% end %>
			
			<h1 class="text-center login-title">Edit</h1>
			<div class="account-wall">

			<%= form_for @employee, :html => {:class => "form-signin", :multipart => true} do |f| %>
				<div>
					<p>
						<%= f.label :name %>:<br />
						<%= f.text_field :name, :class => "form-control" %>
					</p>
					<p>
						<%= f.label :title %>:<br />
						<%= f.text_field :title, :class => "form-control" %>
					</p>
					<p>
						<%= f.label :phone %>:<br />
						<%= f.text_field :phone, :class => "form-control" %>
					</p>
					<p>
						<%= f.label :description %>:<br />
						<%= f.text_area :description, :class => "form-control" %>
					</p>
					<p>
						<%= f.label :image, "Image:" %><br />
						<%= f.file_field :image %>
					</p>
				</div>
				<p><%= f.submit "Update", :class => "btn btn-lg btn-primary btn-block"  %></p>
			<% end %>
			</div>
		</div>
	</div>
</div>